{% if page == 'about' %}
<section class="about rich ">
<div class="container card-static">
  <h2>{{ heading }}</h2>

  <p>{{ p1 }}</p>

  <div class="gallery cols-2">
    <figure>
      <img src="{{ images.history1 }}" alt="{{ cap1 }}">
      <figcaption>{{ cap1 }}</figcaption>
    </figure>
    <figure>
      <img src="{{ images.history2 }}" alt="{{ cap2 }}">
      <figcaption>{{ cap2 }}</figcaption>
    </figure>
  </div>

  <p>{{ p2 }}</p>

  <div class="gallery cols-1">
    <figure>
      <img src="{{ images.history3 }}" alt="{{ cap3 }}">
      <figcaption>{{ cap3 }}</figcaption>
    </figure>
  </div>

  <p>{{ p3 }}</p>

  <div class="gallery cols-2">
    <figure>
      <img src="{{ images.history4 }}" alt="{{ cap4 }}">
      <figcaption>{{ cap4 }}</figcaption>
    </figure>
  </div>

  <p>{{ p4 }}</p>
</div>
</section>

<section class="about-priests container">
  <h2>{{ priests_title }}</h2>
  <div class="grid cols-2">
    {% for pr in priests %}
    <article class="list-card priest-card" itemscope itemtype="https://schema.org/Person">
      <img class="thumb" src="{{ images[pr.img] }}" alt="{{ pr.name }}" itemprop="image">
      <div class="body">
        <h3 class="title" itemprop="name">{{ pr.name }}</h3>
        <p class="text" itemprop="description">{{ pr.desc }}</p>
      </div>
    </article>
    {% endfor %}
  </div>
</section>
{% endif %}
