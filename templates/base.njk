<!doctype html>
<html lang="{{ lang }}">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  {# === Header === #}
  {% if meta and meta.title %}
    <title>{{ meta.title }}</title>
  {% else %}
    <title>{{ site_name or 'UGCC Lausanne' }}</title>
  {% endif %}

  {# Open Graph/Twitter metadata for better sharing #}
  {% set _title = (meta and meta.title) or site_name or 'UGCC Lausanne' %}
  {% set _desc = (meta and meta.description) or '' %}
  {% set _image = (meta and meta.image) or default_hero_image %}
  {% if _image %}
    {% if (_image | substr(0,4)) != 'http' %}
      {% if (_image | substr(0,1)) == '/' %}
        {% set _image = base + _image %}
      {% else %}
        {% set _image = base + '/' + _image %}
      {% endif %}
    {% endif %}
  {% endif %}
  <meta property="og:title" content="{{ _title }}">
  {% if _desc %}<meta property="og:description" content="{{ _desc }}">{% endif %}
  {% if _image %}<meta property="og:image" content="{{ _image }}">{% endif %}
  <meta property="og:type" content="website">
  {% set _locale = 'uk_UA' %}
  {% if lang == 'fr' %}{% set _locale = 'fr_FR' %}{% elif lang == 'en' %}{% set _locale = 'en_GB' %}{% endif %}
  <meta property="og:locale" content="{{ _locale }}">
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:title" content="{{ _title }}">
  {% if _desc %}<meta name="twitter:description" content="{{ _desc }}">{% endif %}
  {% if _image %}<meta name="twitter:image" content="{{ _image }}">{% endif %}

  {# === SEO metadata === #}
  {% if meta and meta.description %}
    <meta name="description" content="{{ meta.description }}">
  {% endif %}
  {% if meta and meta.keywords %}
    <meta name="keywords" content="{{ meta.keywords }}">
  {% endif %}
  {% if meta and meta.author %}
    <meta name="author" content="{{ meta.author }}">
  {% endif %}

  <!-- Favicon -->
  <link rel="icon" href="{{ base }}/assets/images/favicon.svg" type="image/svg+xml">

  <!-- Fonts: headline/body/detail (no preload to avoid console warnings) -->
  <link rel="stylesheet" href="{{ base }}/assets/css/fonts.css">
  {# If web-hosted fonts are desired as fallback, re-enable the links below. Now using self-hosted faces. #}

  {# Dropped hero preload to silence "preloaded but not used" warnings in Chrome. #}

  <!-- Основні стилі -->
  <link rel="stylesheet" href="{{ base }}/assets/css/styles.css">
  <link rel="stylesheet" href="{{ base }}/assets/css/header.css">
  <link rel="stylesheet" href="{{ base }}/assets/css/footer.css">
  <link rel="stylesheet" href="{{ base }}/assets/css/cards.css"> 
  <link rel="stylesheet" href="{{ base }}/assets/css/overrides.css">
	{% if page_hero %}
  <link rel="stylesheet" href="{{ base }}/assets/css/page-hero.css">
	{% endif %}

  <!-- Icons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

</head>

<body>
  {% include "partials/header.njk" %}

  {# === Герой сторінки === #}
		{% if page_hero %}
  		{% include "partials/hero-page.njk" %}
		{% endif %}

  <main>
    {% block content %}{% endblock %}

    {# === Page template === #}
    {% set page_template = "pages/" + page + ".njk" %}
    {% include page_template ignore missing %}
  </main>

  {% include "partials/footer.njk" %}

  <script src="{{ base }}/assets/js/main.js"></script>
</body>
</html>
