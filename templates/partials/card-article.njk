<a class="card-article" href="{{ base }}{{ item.url }}" itemscope itemtype="https://schema.org/Article">
  <div class="card-img">
    {% set _img = item.image or ('' | fallback_article_image(item._id or item.title or item.timestamp)) %}
    {% if (_img | substr(0,4)) != 'http' %}
      {% if (_img | substr(0,1)) == '/' %}
        {% set _img = base + _img %}
      {% else %}
        {% set _img = base + '/' + _img %}
      {% endif %}
    {% endif %}
    <img src="{{ _img }}" alt="{{ item.title }}" itemprop="image">
  </div>
  <div class="card-body">
    <h3 class="card-title" itemprop="headline">{{ item.title }}</h3>
    <p class="card-text" itemprop="description">{{ item.excerpt or item.text | truncate(140) }}</p>
    <div class="card-meta">
      {% if item.author %}
        <span class="meta-author" itemprop="author">{{ item.author }}</span>
      {% endif %}
       {% if item.timestamp or item.date %}
         <time class="meta-date" itemprop="datePublished" datetime="{{ item.timestamp or item.date }}">{{ (item.timestamp or item.date) | format_date_num }}</time>
       {% endif %}
    </div>
  </div>
</a>
