{# Resolve hero image path and prefix with base for GitHub Pages #}
{% set _hero_src = hero_image or default_hero_image %}
{% if (_hero_src | substr(0,4)) != 'http' %}
  {% if (_hero_src | substr(0,1)) == '/' %}
    {% set _hero_src = base + _hero_src %}
  {% else %}
    {% set _hero_src = base + '/' + _hero_src %}
  {% endif %}
{% endif %}

<div class="page-hero">
  <img class="hero-bg" src="{{ _hero_src }}" alt="" aria-hidden="true" />
  <div class="hero-content">
    <h1 class="page-hero-title">{{ title }}</h1>
    {% if page_subtitle %}
      <p>{{ page_subtitle }}</p>
    {% endif %}
  </div>
</div>
