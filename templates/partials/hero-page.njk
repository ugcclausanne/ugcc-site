{# Resolve hero image path and prefix with base for GitHub Pages #}
{% set _hero_src = hero_image or default_hero_image %}
{% if (_hero_src | substr(0,4)) != 'http' %}
  {% if (_hero_src | substr(0,1)) == '/' %}
    {% set _hero_src = base + _hero_src %}
  {% else %}
    {% set _hero_src = base + '/' + _hero_src %}
  {% endif %}
{% endif %}

{# Use background image via CSS custom property for layout control #}
<div class="page-hero" style="--hero-bg: url('{{ _hero_src }}')">
  <div class="hero-content">
    <h1 class="page-hero-title u-underline">{{ title }}</h1>
    {% if page_subtitle %}
      <p>{{ page_subtitle }}</p>
    {% endif %}
  </div>
</div>
