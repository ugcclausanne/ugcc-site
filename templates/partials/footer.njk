<footer class="footer">
  <div class="container">
    <div class="footer-grid">
      <!-- Contacts column -->
      <div class="footer-col ">
        <h3>{{ footer.contacts_title }}</h3>
        <p class="contact-line"><a class="address" href="{{ map_link }}" target="_blank" rel="noopener"><i class="fa-solid fa-location-dot"></i><span>{{ address }}</span></a></p>
        {% if phone %}
          <p class="contact-line"><a class="phone" href="tel:{{ phone }}"><i class="fa-solid fa-phone"></i><span>{{ phone }}</span></a></p>
        {% endif %}
        {% if email %}
          <p class="contact-line"><a class="email" href="mailto:{{ email }}"><i class="fa-solid fa-envelope"></i><span>{{ email }}</span></a></p>
        {% endif %}
      </div>

      <!-- Friends -->
      <div class="footer-col">
        <h3>{{ footer.partners_title }}</h3>
        <ul class="footer-links">
          {% if footer.partners and footer.partners.length %}
            {% for partner in footer.partners %}
              <li><a href="{{ partner.url }}" target="_blank" rel="noopener">{{ partner.title }}</a></li>
            {% endfor %}
          {% endif %}
        </ul>
			</div>

			<!-- Eparchy column-->
			<div class="footer-col">
        <h3>{{ footer.eparchy_title }}</h3>
        <ul class="footer-links">
          <li><a href="https://ugcc.fr/" target="_blank" rel="noopener">{{ footer.eparchy_site_label }}</a></li>
        </ul>
      </div>

    </div>
    <p class="footer-copyright"><small class="dim">{{ footer.copyright }}</small></p>
  </div>
  
</footer>
